<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:VideoDownloaderApp.Converters"
             x:Class="VideoDownloaderApp.App"
             xmlns:local="using:VideoDownloaderApp"
             RequestedThemeVariant="Dark">

    <Application.Resources>
        <converters:BoolToWidthConverter x:Key="BoolToWidthConverter"/>
        <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
    </Application.Resources>

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        
        <!-- Custom Dark Theme Colors -->
        <Style Selector="Window">
            <Setter Property="Background" Value="#1a1a1a"/>
        </Style>
        
        <!-- Sidebar Styles -->
        <Style Selector="Border.sidebar">
            <Setter Property="Background" Value="#2d2d2d"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>
        
        <!-- Navigation Button Styles -->
        <Style Selector="Button.nav-button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="#b0b0b0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Height" Value="44"/>
        </Style>
        
        <Style Selector="Button.nav-button:pointerover">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="#ffffff"/>
        </Style>
        
        <Style Selector="Button.nav-button.active">
            <Setter Property="Background" Value="#0d7377"/>
            <Setter Property="Foreground" Value="#ffffff"/>
        </Style>
        
        <!-- Content Area Styles -->
        <Style Selector="Border.content-area">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="Padding" Value="30"/>
        </Style>
        
        <!-- Modern TextBox Styles -->
        <Style Selector="TextBox.modern">
            <Setter Property="Background" Value="#2d2d2d"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#ffffff"/>
        </Style>
        
        <Style Selector="TextBox.modern:focus">
            <Setter Property="BorderBrush" Value="#0d7377"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
        <!-- Modern Button Styles -->
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#0d7377"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        
        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="#0a5d61"/>
        </Style>
        
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#0d7377"/>
            <Setter Property="BorderBrush" Value="#0d7377"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style Selector="Button.secondary:pointerover">
            <Setter Property="Background" Value="#0d7377"/>
            <Setter Property="Foreground" Value="#ffffff"/>
        </Style>
        
        <!-- Card Styles -->
        <Style Selector="Border.card">
            <Setter Property="Background" Value="#2d2d2d"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,10"/>
        </Style>
        
        <!-- Progress Bar Styles -->
        <Style Selector="ProgressBar">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="#0d7377"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Height" Value="8"/>
        </Style>
        
        <!-- Header Text Styles -->
        <Style Selector="TextBlock.header">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
        
        <Style Selector="TextBlock.subheader">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <!-- Animation Styles -->
        <Style Selector="Border.sidebar">
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Width" Duration="0:0:0.3" Easing="CubicEaseOut"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                    <BrushTransition Property="Foreground" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        
        <!-- Toggle Button for Sidebar -->
        <Style Selector="Button.sidebar-toggle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Foreground" Value="#b0b0b0"/>
        </Style>
        
        <Style Selector="Button.sidebar-toggle:pointerover">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="#ffffff"/>
        </Style>
    </Application.Styles>
</Application>
