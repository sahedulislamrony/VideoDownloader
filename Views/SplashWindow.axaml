<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="VideoDownloaderApp.Views.SplashWindow"
        Width="400" Height="300" Background="#FF1E1E1E" WindowStartupLocation="CenterScreen" CanResize="False" ShowInTaskbar="False" SystemDecorations="None" TransparencyLevelHint="AcrylicBlur">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
            <Image Source="/Resources/logo.png" Width="100" Height="100" />
            <TextBlock Text="Video Downloader" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" />
            <ProgressBar IsIndeterminate="True" Width="200" Height="10" />
        </StackPanel>
    </Grid>
</Window>
